
MDNavigationLayout:
    ScreenManager:
        id : screen_manager
        ProductsPage:
        MainPage:
        WelcomeScreen:
        AboutPage:
        ProfilePage:

    MDNavigationDrawer:
        id: nav_drawer
        size_hint: .6,1
        MDGridLayout:
            cols:1
            
            FitImage:
                source:'src/company_logo.jpg'
                adaptive_size:True
                size_hint: 1,.2

            MDList:
                size_hint: 1,.8
                OneLineIconListItem:
                    text: 'Home'
                    on_release: 
                        screen_manager.current='MainPage'
                        app.toggle_nav()
                    IconLeftWidget:
                        icon: "warehouse"
                OneLineIconListItem:
                    text: 'Profile'
                    on_release: 
                        screen_manager.current='ProfilePage'
                        app.toggle_nav()
                    IconLeftWidget:
                        icon: "face-profile"
                OneLineIconListItem:
                    text: 'ProductsPage'
                    on_release: 
                        screen_manager.current='ProductsPage'
                        app.toggle_nav()
                    IconLeftWidget:
                        icon: "tshirt-crew"
            
            MDList:
                size_hint: 1,.2
                
                OneLineAvatarListItem:
                    text: 'About'
                    on_release: 
                        screen_manager.current='AboutPage'
                        app.toggle_nav()
                    ImageLeftWidget:
                        source:'src/company_logo.jpg'
                        size_hint: .9,.9
                OneLineListItem:
                    text: 'Made by Tariq-Dev'

<WelcomeScreen>
    name:'WelcomeScreen'

<MainPage>
    name:'MainPage'
    
    MDToolbar:
        title:'Custom Name'
        left_action_items: [["menu", lambda x: app.toggle_nav()]]
        pos_hint:{'top':1}
        size_hint: 1,.1
    MDCard:
        # md_bg_color: .8,.8,.1,1
        radius:[25,]
        size_hint: .95,.87
        pos_hint: {'center_x':.5,'top':.88}
        elevation:15

        MDBoxLayout:
            orientation: 'vertical'
            MDLabel:
                text:'Main App Content'
                halign:'center'




            

